{
  "name": "replay-vscode",
  "displayName": "Replay in VSCode",
  "description": "Replay in VSCode",
  "version": "0.0.1",
  "preview": true,
  "private": true,
  "icon": "resources/replay-logo.png",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "replayViewContainer",
          "title": "Replay",
          "icon": "resources/replay-logo.png"
        }
      ]
    },
    "views": {
      "replayViewContainer": [
        {
          "id": "replayInfoView",
          "name": "Replay"
        }
      ]
    },
    "commands": [
      {
        "command": "replay-vscode.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "publish-devtools": "yarn install && cd $REPLAY_DIR/devtools && cd packages/design && npx yalc publish --private && cd ../../packages/node-protocol && npx yalc publish --private && cd ../../packages/shared && npx yalc publish --private && cd ../../packages/protocol && npx yalc publish --private && cd ../../packages/replay-next && npx yalc publish --private && cd ../.. && npx yalc publish",
    "link": "npx yalc link design && npx yalc link node-protocol && npx yalc link shared && npx yalc link protocol && npx yalc link replay-next",
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@dbux/common": "^0.7.9",
    "@replayio/protocol": "^0.63.0",
    "strip-color": "^0.1.0"
  },
  "packageManager": "yarn@4.0.1"
}
